# determine laptop or desktop
{{- $chassis := "desktop" }}
{{- if eq .chezmoi.os "darwin" }}
{{-   if contains "MacBook" (output "system_profiler" "SPHardwareDataType") }}
{{-     $chassis = "laptop" }}
{{-   else }}
{{-     $chassis = "desktop" }}
{{-   end }}
{{- else if eq .chezmoi.os "linux" }}
{{-   $chassis = (output "hostnamectl" "--json=short" | mustFromJson).Chassis }}
{{- end }}

{{ if ne $chassis "laptop" }}
.config/ghostty/laptop.conf
{{ end }}

