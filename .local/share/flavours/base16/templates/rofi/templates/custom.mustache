* {
	background-color: #{{base00-hex}};
	text-color: #{{base05-hex}};
	spacing: 0;
	width: 720px;
    dpi: 220;
}

inputbar {
	border: 0 0 1px 0;
	children: [prompt, entry];
}

prompt {
	padding: 16px;
}

textbox {
	padding: 8px 16px;
}

entry {
	padding: 16px;
}

listview {
	cycle: false;
	margin: 0 0 -1px 0;
	scrollbar: false;
}

element {
	padding: 16px;
}

element selected {
	background-color: #{{base0E-hex}};
	text-color: #{{base00-hex}};
}
