label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.accent}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
; focused = Active workspace on focused monitor
label-focused = %icon% %name%
