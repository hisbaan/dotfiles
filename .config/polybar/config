reverse-scroll = false
fuzzy-match = false

;extra icons to choose from
;http://fontawesome.io/cheatsheet/
;       v      ﭮ  

ws-icon-0 = 1;󰈹
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;拾
ws-icon-4 = 5;辶
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;ﱘ 
ws-icon-8 = 9;ﭮ
