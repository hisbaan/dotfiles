# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
# set scroll-step 50

# zoom settings
set zoom-min 10
set render-loading "false"

set recolor true

# start flavours

set default-bg                  "#1E2127"
set default-fg                  "#DFDFDF"

set statusbar-bg                "#1E2127"
set statusbar-fg                "#DFDFDF"

set inputbar-bg                 "#1E2127"
set inputbar-fg                 "#DFDFDF"

set notification-bg             "#1E2127"
set notification-fg             "#BD39F9"

set notification-error-bg       "#1E2127"
set notification-error-fg       "#E06C75"

set notification-warning-bg     "#1E2127"
set notification-warning-fg     "#E06C75"

set highlight-color             "#BD93F9"
set highlight-active-color      "#7218F2" # darker accent (purple)

set completion-bg               "#7218F2" # darker accent (purple)
set completion-fg               "#BD93F9"

set completion-highlight-fg     "#BD93F9"
set completion-highlight-bg     "#7218F2" # darker accent (purple)

set recolor-lightcolor          "#1e2127"
set recolor-darkcolor           "#dfdfdf"

# end flavours

set font "MesloLGS Nerd Font normal 10"
