# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
# set scroll-step 50

# zoom settings
set zoom-min 10

set render-loading "false"

set recolor true

# start flavours
# Base16 OneDark Custom
# Author: Hisbaan Noorani (https://github.com/hisbaan)

set default-bg                  "#1e2127"
set default-fg                  "#d9dde5"

set inputbar-bg                 "#1e2127"
set inputbar-fg                 "#d9dde5"

set statusbar-bg                "#1e2127"
set statusbar-fg                "#d9dde5"

set notification-bg             "#1e2127"
set notification-fg             "#d9dde5"

set notification-error-bg       "#1e2127"
set notification-error-fg       "#e06c75"

set notification-warning-bg     "#1e2127"
set notification-warning-fg     "#e06c75"

set highlight-color             "#bd93f9"
set highlight-active-color      "#62afef"

set completion-bg               "#282c34"
set completion-fg               "#d9dde5"

set completion-highlight-fg     "#d9dde5"
set completion-highlight-bg     "#bd93f9"

set recolor-lightcolor          "#1e2127"
set recolor-darkcolor           "#d9dde5"

# end flavours

set font "MesloLGS Nerd Font normal 10"
